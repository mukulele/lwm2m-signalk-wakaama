{
  "signalk_subscriptions": {
    "server": {
      "host": "127.0.0.1",
      "port": 3000,
      "path": "/signalk/v1/stream",
      "subscribe_mode": "none"
    },
    "subscriptions": [
      {
        "path": "navigation.position",
        "period_ms": 1000,
        "min_period_ms": 500,
        "high_precision": true,
        "description": "Vessel position (latitude/longitude)"
      },
      {
        "path": "notifications.*",
        "period_ms": 1000,
        "min_period_ms": 500,
        "high_precision": false,
        "description": "Notifications"
      }
    ]
  },
  "reconnection": {
    "auto_reconnect_enabled": true,
    "max_retries": 0,
    "base_delay_ms": 1000,
    "max_delay_ms": 300000,
    "backoff_multiplier": 2.0,
    "jitter_percent": 20,
    "connection_timeout_ms": 30000,
    "reset_on_success": true
  }
}
