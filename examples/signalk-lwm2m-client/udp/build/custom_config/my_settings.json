{
  "signalk_subscriptions": {
    "server": {
      "host": "127.0.0.1",
      "port": 3000,
      "path": "/signalk/v1/stream",
      "subscribe_mode": "none"
    },
    "subscriptions": [
      {
        "path": "navigation.position",
        "period_ms": 1000,
        "min_period_ms": 500,
        "high_precision": true,
        "description": "Vessel position (latitude/longitude)"
      },
      {
        "path": "navigation.speedOverGround",
        "period_ms": 1000,
        "min_period_ms": 500,
        "high_precision": true,
        "description": "Speed over ground"
      },
      {
        "path": "navigation.courseOverGroundTrue",
        "period_ms": 1000,
        "min_period_ms": 500,
        "high_precision": false,
        "description": "Course over ground (true)"
      },
      {
        "path": "navigation.datetime",
        "period_ms": 1000,
        "min_period_ms": 500,
        "high_precision": false,
        "description": "Navigation timestamp"
      },
      {
        "path": "navigation.gnss.methodQuality",
        "period_ms": 2000,
        "min_period_ms": 1000,
        "high_precision": false,
        "description": "GNSS fix quality"
      },
      {
        "path": "navigation.gnss.satellites",
        "period_ms": 3000,
        "min_period_ms": 1500,
        "high_precision": false,
        "description": "Number of satellites in use"
      },
      {
        "path": "navigation.gnss.antennaAltitude",
        "period_ms": 3000,
        "min_period_ms": 1500,
        "high_precision": false,
        "description": "GNSS antenna altitude"
      },
      {
        "path": "navigation.gnss.horizontalDilution",
        "period_ms": 5000,
        "min_period_ms": 2500,
        "high_precision": false,
        "description": "Horizontal dilution of precision"
      },
      {
        "path": "navigation.gnss.differentialAge",
        "period_ms": 5000,
        "min_period_ms": 2500,
        "high_precision": false,
        "description": "Age of differential corrections"
      },
      {
        "path": "navigation.gnss.differentialReference",
        "period_ms": 5000,
        "min_period_ms": 2500,
        "high_precision": false,
        "description": "Differential reference station ID"
      },
      {
        "path": "environment.rpi.cpu.temperature",
        "period_ms": 30000,
        "min_period_ms": 15000,
        "high_precision": false,
        "description": "Raspberry Pi CPU temperature"
      },
      {
        "path": "environment.rpi.memory.utilisation",
        "period_ms": 30000,
        "min_period_ms": 15000,
        "high_precision": false,
        "description": "Memory utilization"
      },
      {
        "path": "environment.rpi.sd.utilisation",
        "period_ms": 30000,
        "min_period_ms": 15000,
        "high_precision": false,
        "description": "SD card utilization"
      },
      {
        "path": "environment.rpi.cpu.utilisation",
        "period_ms": 30000,
        "min_period_ms": 15000,
        "high_precision": false,
        "description": "CPU utilization"
      },
      {
        "path": "environment.rpi.cpu.core",
        "period_ms": 30000,
        "min_period_ms": 15000,
        "high_precision": false,
        "description": "Per-core CPU utilization"
      },
      {
        "path": "network.interfaces",
        "period_ms": 60000,
        "min_period_ms": 30000,
        "high_precision": false,
        "description": "Network interface information"
      }
    ]
  }
}
